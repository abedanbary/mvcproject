@model idefny.Models.Book

@{
    ViewData["Title"] = "Book Details";
}

<div class="book-details">
    <h1>@Model.Name</h1>

    <!-- Display Book Image -->
    <div class="book-image-container">
        @if (string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="/images/default.jpg" class="book-image" alt="Default Book Image" />
        }
        else
        {
            <img src="@Url.Content(Model.ImageUrl)" class="book-image" alt="Book Image" />
        }
    </div>

    <div class="book-info">
        <p><strong>Author:</strong> @Model.Author</p>
        <p><strong>Age:</strong> @Model.Age</p>
        <p><strong>Genre:</strong> @Model.Genre</p>
        <p><strong>Number of Copies:</strong> @Model.NumberOfCopies</p>
        <p><strong>Available for Borrow:</strong> @Model.AvailableForBorrow</p> <!-- Display Available Copies -->
        <p><strong>Date Published:</strong> @Model.DatePublished.ToString("MMMM dd, yyyy")</p>
        <p><strong>Price:</strong> $@Model.Price</p>
    </div>

    <div class="actions">
        <!-- Add Borrow and Buy buttons -->
      
        <a href="@Url.Action("Edit", "Book", new { id = Model.Id })" class="btn btn-primary">Edit</a>
        <a href="@Url.Action("Index", "Book")" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<style>
    .book-details {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

        .book-details h1 {
            text-align: center;
            margin-bottom: 20px;
        }

    .book-info p {
        margin: 10px 0;
    }

    .actions {
        text-align: center;
        margin-top: 20px;
    }

        .actions .btn {
            margin: 0 5px;
            text-decoration: none;
            padding: 10px 15px;
            border-radius: 5px;
            color: white;
        }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

    .btn-success {
        background-color: #28a745;
        border: none;
    }

    .btn-warning {
        background-color: #ffc107;
        border: none;
    }

    /* Styling for the Book Image */
    .book-image-container {
        text-align: center;
        margin-bottom: 20px;
    }

    .book-image {
        max-width: 100%;
        height: auto;
        max-height: 300px;
        border-radius: 5px;
        object-fit: cover;
    }
</style>


