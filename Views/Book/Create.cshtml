@model idefny.Models.Book

<form method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label">Book Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Author" class="form-label">Author</label>
        <input asp-for="Author" class="form-control" />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Age" class="form-label">Age</label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Genre" class="form-label">Genre</label>
        <input asp-for="Genre" class="form-control" />
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="NumberOfCopies" class="form-label">Number of Copies</label>
        <input asp-for="NumberOfCopies" class="form-control" />
        <span asp-validation-for="NumberOfCopies" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DatePublished" class="form-label">Publication Date</label>
        <input asp-for="DatePublished" class="form-control" type="date" />
        <span asp-validation-for="DatePublished" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ImageUrl" class="form-label">Book Image</label>
        <input type="file" name="ImageFile" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="PdfUrl" class="form-label">PDF File</label>
        <input type="file" name="PdfFile" class="form-control" />
        <span asp-validation-for="PdfUrl" class="text-danger"></span>
    </div>

    <div class="form-group form-check mb-3">
        <input asp-for="IsAvailableForBorrow" class="form-check-input" type="checkbox" />
        <label asp-for="IsAvailableForBorrow" class="form-check-label">Available for Borrow</label>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>


