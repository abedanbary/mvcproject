@model IEnumerable<idefny.Models.BorrowedBook>

@{
    ViewData["Title"] = "My Borrowed Books";
}

<style>
    /* General Styles */
    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
        margin-top: 40px;
    }

    h2 {
        margin-bottom: 30px;
        color: #2c3e50;
        font-size: 2.5rem;
        font-weight: 700;
        text-align: center;
    }

    /* Card Styles */
    .card {
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background-color: #ffffff;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

    .card-img-top {
        border-radius: 15px 15px 0 0;
        object-fit: cover;
        height: 250px;
    }

    .card-body {
        padding: 20px;
    }

    .card-title {
        font-size: 1.5rem;
        color: #2c3e50;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .card-text {
        color: #555;
        font-size: 1rem;
    }

    .book-detail {
        font-size: 1rem;
        margin-bottom: 8px;
    }

        .book-detail strong {
            color: #2c3e50;
        }

    /* Button Styles */
    .btn {
        font-size: 0.9rem;
        padding: 8px 16px;
        border-radius: 25px;
        display: inline-flex;
        align-items: center;
        gap: 5px;
        text-transform: capitalize;
        transition: all 0.3s ease;
        text-decoration: none;
        border: none;
    }

    .btn-read {
        background-color: #007BFF;
        color: white;
    }

        .btn-read:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

    .btn-download {
        background-color: #4CAF50;
        color: white;
    }

        .btn-download:hover {
            background-color: #45a049;
            transform: scale(1.05);
        }

    .btn-danger {
        background-color: #e74c3c;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c0392b;
            transform: scale(1.05);
        }

    .btn-icon {
        font-size: 1rem;
    }

    .button-container {
        display: flex;
        justify-content: space-between;
        margin-top: 15px;
    }

    /* Alert Styles */
    .alert {
        margin-top: 20px;
        padding: 15px;
        border-radius: 10px;
        font-size: 1rem;
    }

    .alert-info {
        background-color: #e9f5ff;
        border-color: #b8daff;
        color: #004085;
    }

    .alert-danger {
        background-color: #f8d7da;
        border-color: #f5c6cb;
        color: #721c24;
    }

    /* Image Styles */
    img {
        margin-right: 10px;
        vertical-align: middle;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .col-md-4 {
            flex: 0 0 100%;
            max-width: 100%;
        }

        h2 {
            font-size: 2rem;
        }
    }
</style>

<div class="container">
    <h2>@ViewData["Title"]</h2>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info">
            <strong>@ViewBag.Message</strong>
        </div>
    }

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var borrowedBook in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <!-- Book Image -->
                        <img src="@Url.Content(borrowedBook.Book.ImageUrl ?? "/images/default.jpg")"
                             class="card-img-top"
                             alt="Book Image">

                        <!-- Card Body -->
                        <div class="card-body">
                            <h5 class="card-title">@borrowedBook.Book.Name</h5>
                            <p class="card-text book-detail"><strong>Published On:</strong> @borrowedBook.Book.DatePublished.ToString("yyyy-MM-dd")</p>
                            <p class="card-text book-detail"><strong>Borrowed On:</strong> @borrowedBook.BorrowDate.ToString("MMMM dd, yyyy")</p>
                            @if (borrowedBook.ReturnDate2 > DateTime.UtcNow)
                            {
                                var remainingDays = (borrowedBook.ReturnDate2 - DateTime.UtcNow).Days;
                                <p class="card-text book-detail text-success"><strong>Time Remaining:</strong> @remainingDays day(s)</p>
                            }
                            else
                            {
                                <p class="card-text book-detail text-danger"><strong>Overdue!</strong></p>
                            }

                            <!-- Download Button -->
                            @if (!string.IsNullOrEmpty(borrowedBook.Book.PdfUrl))
                            {
                                <div class="button-container">
                                    <a href="@Url.Content(borrowedBook.Book.PdfUrl)" class="btn btn-read" target="_blank">
                                        <img src="/images/openbookicon.png" alt="Read" style="width: 24px; height: 24px;" />
                                        Read
                                    </a>
                                </div>
                            }
                            else
                            {
                                <p class="text-danger">PDF not available.</p>
                            }

                            <!-- Return Button -->
                            <form asp-action="ReturnBook" method="post" class="mt-3">
                                <input type="hidden" name="borrowedBookId" value="@borrowedBook.Id" />
                                <button type="submit" class="btn btn-danger w-100">
                                    <i class="fas fa-undo btn-icon"></i> Return
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <strong>No borrowed books found.</strong>
        </div>
    }
</div>